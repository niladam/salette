{
    "name": "niladam/salette",
    "description": "ðŸš€Easily build API integrations into your legacy application.",
    "authors": [
        {
            "name": "Madalin Tache",
            "email": "niladam@gmail.com"
        },
        {
            "name": "Catalin Pruna",
            "email": "prunacatalin.costin@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4 < 8.0",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.9"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.47",
        "friendsofphp/php-cs-fixer": "^3.75",
        "phpstan/phpstan": "^2.1",
        "squizlabs/php_codesniffer": "^3.12",
        "phpunit/phpunit": "^9",
        "symfony/var-dumper": "^4.3.4|^5.0|^6.0|^7.0",
        "pestphp/pest": "^1.23",
        "league/flysystem": "^2.5"
    },
    "suggest": {
        "illuminate/collections": "Required for the response collect() method.",
        "illuminate/support": "Required for Laravel integration (auto-discovery of ServiceProvider)",
        "ext-xml": "Used if you plan on using the xml handing"
    },
    "autoload": {
        "psr-4": {
            "Salette\\": "src/",
            "Salette\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": []
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "cs": [
            "@cs:check",
            "@cs:fix"
        ],
        "cs:check": "phpcs src",
        "cs:fix": "php-cs-fixer fix src --using-cache=no",
        "pstan": "phpstan analyse"
    }
}
